  <persistence-unit name="POOPU" transaction-type="JTA">
    <jta-data-source>jdbc/POO2</jta-data-source>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
        <property name="hibernate.show_sql" value="true" /> 
        <property name="hibe rnate.dialect" value="org.hibernate.dialect.MySQLDialect" /> 
    </properties>
  </persistence-unit>
</persistence>
